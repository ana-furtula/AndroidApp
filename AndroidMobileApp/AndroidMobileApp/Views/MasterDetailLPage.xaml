<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidMobileApp.Views.MasterDetailLPage"
             MasterBehavior="Popover">

    <MasterDetailPage.Master>
        <ContentPage Title="Master" Icon="menuicon.png">
            <ContentPage.Content>
                <Grid>
                    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <Image Source="health3.jpg" Aspect="AspectFill"></Image>
                    </Grid>
                    <Grid>
                        <StackLayout Margin="10,10,10,10">
                            <Label Text="" FontSize="Medium"></Label>
                            <Button Text="Home" BackgroundColor="#00BFFF" Clicked="Tests_Clicked"></Button>
                            <Button Text="Results" BackgroundColor="#00BFFF" Clicked="Results_Clicked"></Button>
                            <Button Text="Scheduled tests" BackgroundColor="#00BFFF" Clicked="Scheduled_Clicked"></Button>
                            <Button Text="About" BackgroundColor="#00BFFF" Clicked="About_Clicked"></Button>
                            <Button Text="Log out" BackgroundColor="#1E90FF" Clicked="LogOut_Clicked"></Button>
                        </StackLayout>
                    </Grid>
                </Grid>
               
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
    
    <MasterDetailPage.Detail>
        <ContentPage Padding="10">
            <ContentPage.Content>
                <StackLayout Margin="5,30,5,5">
                    <Label Text="Detail Page"></Label>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>