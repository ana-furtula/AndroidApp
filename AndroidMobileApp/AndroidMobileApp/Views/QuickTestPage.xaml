<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidMobileApp.Views.QuickTestPage">
    <ContentPage.Content>
        <StackLayout Padding="20,20,20,20">
            <Label Text="Which date do you want to get tested?" TextColor="#1E90FF" FontSize="Large"></Label>
            <DatePicker MinimumDate="{Binding MinDate}"
            MaximumDate="{Binding MaxDate}"
            Date="{Binding SelectedDate}" />
            <Label Text="Which time do you want to get tested?" TextColor="#1E90FF" FontSize="Large"></Label>
            <TimePicker Time="{Binding SelectedTime}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>